<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/g1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanjay.railways3.profile">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:text="PROFILE"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/white"/>
    <ScrollView
        android:layout_weight="9.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="310dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@android:color/primary_text_dark_nodisable"
                android:layout_marginBottom="16dp"
                android:layout_weight="4"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="PERSONAL DETAILS"/>
                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="NAME"
                        android:id="@+id/name"/>

                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="MOBILE NUMBER"
                        android:id="@+id/mobile"/>
                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="E-MAIL"
                        android:id="@+id/email"
                        android:inputType="text" />
                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="AGE"
                        android:id="@+id/age"/>
                    <RelativeLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="310dp"
                android:layout_marginLeft="16dp"
                app:cardElevation="16dp"
                app:cardCornerRadius="14dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="2"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="PASSWORD CONFIRMATION"/>
                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="PASSWORD"
                        android:id="@+id/pass"/>
                    <EditText
                        android:layout_marginTop="7dp"
                        android:layout_width="306dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:hint="CONFIRM PASSWORD"
                        android:id="@+id/cpass"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <Button
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:text="save"
                    android:id="@+id/save"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#4980f6" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
