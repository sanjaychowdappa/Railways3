<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/gg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanjay.railways3.register">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/white"/>
    <ScrollView
        android:layout_weight="9.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="310dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@android:color/primary_text_dark_nodisable"
        android:layout_marginBottom="16dp"
        android:layout_weight="4"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="PERSONAL DETAILS"/>
            <EditText
                android:layout_marginTop="7dp"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="NAME"
                android:id="@+id/name"/>

            <EditText
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="MOBILE NUMBER"
                android:id="@+id/mobile"/>
            <EditText
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="E-MAIL"
                android:id="@+id/email"
                android:inputType="text" />
            <EditText
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="AGE"
                android:id="@+id/age"/>
            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/gen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENDER"
                    android:textSize="12sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radioButton"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/gen"
                    android:layout_marginLeft="100dp"
                    android:text="MALE"
                    android:textSize="12sp"/>
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEMALE"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/radioButton"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="310dp"
            android:layout_marginLeft="16dp"
            app:cardElevation="16dp"
            app:cardCornerRadius="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="2"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="PASSWORD CONFIRMATION"/>
                <EditText
                    android:layout_marginTop="7dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:hint="PASSWORD"
                    android:id="@+id/pass"/>
                <EditText
                    android:layout_marginTop="7dp"
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:hint="CONFIRM PASSWORD"
                    android:id="@+id/cpass"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <Button
               android:layout_marginTop="7dp"
               android:layout_width="wrap_content"
               android:text="REGISTER"
               android:id="@+id/register"
               android:textColor="@android:color/white"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:background="#4980f6" />
           <Button
               android:layout_marginTop="7dp"
               android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:text="CLEAR"
               android:textColor="@android:color/white"
               android:id="@+id/clear"
               android:layout_height="wrap_content"
               android:background="#4980f6" />
       </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
